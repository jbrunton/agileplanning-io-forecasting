<% breadcrumb :domains %>

<div class="row">
  <div class="large-12 columns">
    <p id="notice"><%= notice %></p>

    <h1>Listing Domains</h1>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Domain</th>
          <th>Last synced</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @domains.each do |domain| %>
            <tr>
              <td><%= domain.name %></td>
              <td><%= domain.domain %></td>
              <td><%= domain.last_synced %></td>
              <td><%= link_to 'Show', domain %></td>
              <td><%= link_to 'Edit', edit_domain_path(domain) %></td>
              <td><%= link_to 'Destroy', domain, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Domain', new_domain_path %>
  </div>
</div>
